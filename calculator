#include<stdio.h>
#include<stdlib.h>
int main()
{
 float a,b,ans;
 int x;
 printf("Enter the val of a and b\n\n");
 scanf("%f %f",&a,&b);
 g:
   printf("Enter ur choice\n1.Add\n2.Sub\n3.Mul\n4.Div\n5.Exit\n\n");
   scanf("%d",&x);
switch(x)
{
 case 1:
    printf("the add is %.2f",a+b);
    break;
 case 2:
    printf("the sub is %.2f",a-b);
    break;
 case 3:
    printf("the mul is %.2f",a*b);
    break;
 case 4:
    printf("the div is %.2f",a/b);
    break;
  case 5:
      exit(0);
  default:
      printf("Wrong choice\n");
      goto g;
}
 return 0;
}
