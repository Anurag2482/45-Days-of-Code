//Passing Array as function argument

#include<stdio.h>
double getAverage(int arr[], int size)
{
 int i;
 double avg, sum = 0;
 for (i = 0; i < size; i++)
 {
   sum =sum + arr[i];
 }
 avg = sum / size;
 return avg;
}
int main()
{
  int myarr[5] = {6, 2, 3, 17, 5};
  double result;
  result=getAverage(myarr,5);
  printf( "Average value is: %.2f ", result);
  return 0;
}

